CREATE TABLE COMMENTS
(
    COMMENTID NUMBER NOT NULL,
    EMAIL VARCHAR2(160) NOT NULL,
    COMMENTPOST VARCHAR2(2000) NOT NULL,
    CONSTRAINT PK_COMMENT PRIMARY KEY  (COMMENTID)
);
/
CREATE SEQUENCE SQ_COMMENT_PK
START WITH 1 
INCREMENT BY 1;
/
CREATE OR REPLACE TRIGGER TR_INSERT_COMMENTS
BEFORE INSERT ON COMMENTS
FOR EACH ROW
BEGIN
    SELECT SQ_COMMENT_PK.NEXTVAL INTO :NEW.COMMENTID FROM DUAL;
END;
/
INSERT INTO COMMENTS(EMAIL, COMMENTPOST) VALUES ('acb@gmail.com', 'Miami is cool');
INSERT INTO COMMENTS(EMAIL, COMMENTPOST) VALUES ('hi@gmail.com', 'Tempa');

SELECT * FROM COMMENTS;

